{% extends "admin/base.html.twig" %}

{% block main_content_inner %}
<div class="form_main_edit">
    {% if employees|length > 0 %}
    <table class="table table-hover table-striped user_table">
        <thead>
            <tr>
                <th>{{ "table.user.source"|trans }}</th>
                <th>{{ "table.user.logintime"|trans }}</th>
                <th>{{ "table.user.loginip"|trans }}</th>
                <th>{{ "table.employee.name"|trans }}</th>
                <th>{{ "table.employee.hometown"|trans }}</th>
                <th>{{ "table.employee.location"|trans }}</th>
                <th>{{ "table.employee.gender"|trans }}</th>
            </tr>
        </thead>
        <tbody>
            {% for employee in employees %}
            <tr>
                <td>{{ employee.uid.source }}</td>
                <td>{{ employee.uid.logintime|date('Y-m-d H:i:s') }}</td>
                <td>{{ employee.uid.loginip }}</td>
                <td>{{ employee.name }}</td>
                <td>{{ employee.hometown }}</td>
                <td>{{ employee.location }}</td>
                <td>{{ ("table.employee.gender." ~ employee.gender)|trans }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
    <div class="alert alert-warning">{{ "common.none"|trans }}</div>
    {% endif %}
</div>

<ul class="pager">
    {% for url in urls %}
    <li>{{ url|raw }}</li>
    {% endfor %}
</ul>
{% endblock %}