<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
        <link rel="apple-touch-icon" href="/apple-touch-icon.png">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <link rel="canonical" href="{{ "host"|system }}" />
        <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
        <title>{{ "seo_title"|system }}{% block title_suffix %}{% endblock %}</title>
        <meta name="description" content="{{ "seo_description"|system }}" />
        <meta name="keywords" content="{{ "seo_keyword"|system }}" />
        <link href="{{ asset("assets/css/bootstrap.css") }}" rel="stylesheet" />
        <link href="{{ asset("assets/css/bootstrap-theme.css") }}" rel="stylesheet" />
        <link href="{{ asset("assets/css/bootstrap-extend.css") }}" rel="stylesheet" />
        <link href="{{ asset("assets/admin/css/common.css") }}" rel="stylesheet" />
        {% block header_css %}{% endblock %}
        <script src="{{ asset("assets/js/jquery.js") }}"></script>
        <script src="{{ asset("assets/js/jquery.plugin.js") }}"></script>
        <script src="{{ asset("assets/js/bootstrap.js") }}"></script>
        <!--[if lt IE 9]>
        <script src="{{ asset("assets/js/html5shiv.js") }}"></script>
        <script src="{{ asset("assets/js/respond.min.js") }}"></script>
        <![endif]-->
        <script src="{{ asset("assets/admin/js/common.js") }}"></script>
        {% block header_js %}{% endblock %}
    </head>
    <body>
        <div id="main">
            <div id="main_inner">
                {% block main_header %}{% endblock %}
                <div id="main_content">
                    <div id="main_content_inner">
                        {% block main_content_inner %}{% endblock %}
                    </div>
                </div>
                {% block main_footer %}{% endblock %}
            </div>
        </div>
    </body>
    {% block footer_js %}{% endblock %}
</html>