{% block container %}
<div id="job_content_left">
    {% if app.session.flashbag.has("danger") %}
    <div class="alert alert-danger">
        {% for danger in app.session.flashbag.get('danger') %}
        {{ danger|raw }}
        {% endfor %}
        <span class="close glyphicon glyphicon-remove"></span>
    </div>
    {% endif %}

    {% if app.session.flashbag.has("info") %}
    <div class="alert alert-info">
        {% for info in app.session.flashbag.get('info') %}
        {{ info|raw }}
        {% endfor %}
        <span class="close glyphicon glyphicon-remove"></span>
    </div>
    {% endif %}

    {% if job is defined and job is iterable and job|length > 0 %}
        <div class="job_desc">
            <h2>{{ job.title }}</h2>
            <div class="job_attr">
                {% if job.salary %}
                <span>{{ "table.job.salary"|trans }} : {{ ("currency"|system ~ ".symbol")|trans }}{{ job.salary }} {{ "common.salary.unit"|trans }}</span>
                {% endif %}

                {% if job.industry is iterable and job.industry|length > 0 %}
                <span>{{ "table.job.industry"|trans }} : {{ job.industry.isn|trans }}</span>
                {% endif %}

                {% if job.type is iterable and job.type|length > 0 %}
                <span>{{ "table.job.type"|trans }} : {{ job.type.tsn|trans }}</span>
                {% endif %}

                {% if job.area is iterable and job.area|length > 0 %}
                <span>
                    {{ "table.job.area"|trans }} :
                    {{ job.area.code|upper|trans }}
                    {% if job.area.pid is iterable and job.area.pid|length > 0 %}
                    - {{ job.area.pid.code|upper|trans }}
                    {% endif %}
                </span>
                {% endif %}

                {% if job.endtime %}
                <span>{{ "table.job.endtime"|trans }} : {{ job.endtime|date("date_format"|system) }}</span>
                {% endif %}
            </div>

            {% if job.description %}
            <p>{{ job.description|raw }}</p>
            {% endif %}

            {% if job.isLogin %}
                {% if job.eme is defined %}
                    <span class="badge">{{ "common.job.noemployee"|trans }}</span>
                    {% if job.eme.employee is defined %}
                    <a href="{{ path("dashboard") ~ "?q=account_eme" }}" target="_blank">{{ "common.job.noemployee.employee"|trans }}</a>
                    {% endif %}
                    {% if job.eme.education is defined %}
                    <a href="{{ path("dashboard") ~ "?q=account_edu" }}" target="_blank">{{ "common.job.noemployee.education"|trans }}</a>
                    {% endif %}
                {% else %}
                    {% if job.delivery is defined %}
                    <div class="dating_area row">
                        <div class="col-4">
                            <a class="btn btn-primary btn-md col-12" onclick='delivery("{{ job.delivery }}","{{ path('job_delivery') }}",{"deliverying":"{{ "job.delivery.deliverying"|trans }}","success":"{{ "job.delivery.success"|trans }}","fail":"{{ "job.delivery.fail"|trans }}","repeat":"{{ "job.delivery.repeat"|trans({"%day%":("job_expires"|system / 86400)}) }}","nologin":"{{ "job.delivery.nologin"|trans }}","same":"{{ "job.delivery.same"|trans }}","invalid":"{{ "job.delivery.invalid"|trans }}"})'>{{ "job.delivery"|trans }}</a>
                        </div>
                        <div class="col-7 col-offset-1" id="delivery_status"></div>
                    </div>
                    {% endif %}
                {% endif %}
            {% else %}
                {% if job.sendmail is defined %}
                    {{ form_start(job.sendmail.form) }}
                    {{ form_widget(job.sendmail.form.jid) }}
                    {{ form_widget(job.sendmail.form.emr) }}
                    {{ form_widget(job.sendmail.form.emailto) }}
                    {{ form_widget(job.sendmail.form.emailfrom) }}
                    <div id="cv"></div>
                    {{ form_end(job.sendmail.form) }}
                {% endif %}
            {% endif %}
        </div>

        {% if job.verify is null %}
            {% if job.uid is iterable and job.uid|length > 0 %}
                <div class="emr_desc">
                    {% if job.uid.avator is defined and job.uid.avator %}
                    <div class="avator avator_2x"><img src="{{ job.uid.avator|avator("2x") }}" /></div>
                    {% endif %}

                    {% if job.uid.name is defined and job.uid.name %}
                    <h3>{{ job.uid.name }}</h3>
                    {% endif %}

                    <div class="job_attr">
                        {% if job.uid.location is defined and job.uid.location %}
                        <span>{{ "table.employer.location"|trans }} : {{ job.uid.location.code|trans }}</span>
                        {% endif %}
                        {% if job.uid.type is defined and job.uid.type %}
                        <span>{{ "table.employer.type"|trans }} : {{ job.uid.type.csn|trans }}</span>
                        {% endif %}
                        {% if job.uid.scale is defined and job.uid.scale %}
                        <span>{{ "table.employer.scale"|trans }} : {{ job.uid.scale.csn|trans }}</span>
                        {% endif %}
                    </div>

                    {% if job.about2 is not null %}
                    <p>{{ job.about2|raw }}</p>
                    {% endif %}

                    {% if job.contacteremail2 is not null %}
                        {% if job.contacter2 %}
                        <p>{{ "table.employer.contacter"|trans }} : {{ job.contacter2 }}</p>
                        {% endif %}
                        {% if job.contactertel2 %}
                        <p>{{ "table.employer.contactertel"|trans }} : {{ job.contactertel2 }}</p>
                        {% endif %}
                    {% endif %}

                    {% if job.uid.fax is defined and job.uid.fax %}
                    <p>{{ "table.employer.fax"|trans }} : {{ job.uid.fax }}</p>
                    {% endif %}

                    {% if job.uid.address is defined and job.uid.address %}
                    <p>{{ "table.employer.address"|trans }} : {{ job.uid.address }}</p>
                    {% endif %}

                    {% if job.uid.site is defined and job.uid.site %}
                    <p>{{ "table.employer.site"|trans }} : <a href="{{ job.uid.site }}" target="_blank">{{ job.uid.site }}</a></p>
                    {% endif %}
                </div>
            {% endif %}
        {% elseif job.about is not null %}
            <div class="emr_desc">
                {% if job.avator is defined and job.avator %}
                <div class="avator avator_2x"><img src="{{ job.avator|avator("2x") }}" /></div>
                {% endif %}
                <p>{{ job.about|raw }}</p>
                {% if job.contacteremail is not null %}
                    {% if job.contacter %}
                        <p>{{ "table.job.contacter"|trans }} : {{ job.contacter }}</p>
                    {% endif %}
                    {% if job.contactertel %}
                        <p>{{ "table.job.contactertel"|trans }} : {{ job.contactertel }}</p>
                    {% endif %}
                {% endif %}
            </div>
        {% endif %}
    {% endif %}
</div>
{% endblock %}

