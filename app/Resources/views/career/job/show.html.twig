            condition: "{{ job.sendmail.condition }}"
        }
    },
    deleteFile: {
        method: "DELETE",
        endpoint: "{{ job.sendmail.uploader }}"
    },
    form: {
        interceptSubmit: true
    },
    validation: {
        allowedExtensions: ["doc","docx","pdf"],
        sizeLimit: 5242880
    }
});

