<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity repository-class="ScopeRepository" name="jobseeker\Bundle\SsoBundle\Entity\Scope" table="scope">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="scope" type="string" column="scope" length="255" />
        <field name="isDefault" type="boolean" column="is_default" nullable="true"/>
    </entity>
</doctrine-mapping>